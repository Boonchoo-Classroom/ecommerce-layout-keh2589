<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFAF0"
    android:orientation="vertical"
    tools:context=".ui.Home.HomeFragment">

    <ImageView
        android:id="@+id/post2"
        android:layout_width="wrap_content"
        android:layout_height="201dp"
        android:src="@drawable/post" />

    <TextView
        android:id="@+id/product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="8dp"
        android:text="BEST SELLER OF THE WEEK"
        android:textStyle="bold" />


    <!--frame1-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal">

        <!--สินค้าชิ้นที่ 1-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingVertical="5dp"
            android:paddingHorizontal="5dp"
            android:backgroundTint="#FDF5E6"
            android:background="@drawable/frame">

            <ImageView
                android:id="@+id/f01"
                android:layout_width="110dp"
                android:layout_height="114dp"
                android:src="@drawable/f01" />

            <TextView
                android:id="@+id/product_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="sunscreen clear nose"
                android:textAlignment="center"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/product_price1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="59฿"
                android:textAlignment="center"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_add_to_cart1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Add to Cart"
                android:backgroundTint="@drawable/button_color2"
                android:textSize="12sp" />
        </LinearLayout>

        <!--สินค้าชิ้นที่ 2-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/frame"
            android:backgroundTint="#FDF5E6"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/f02"
                android:layout_width="110dp"
                android:layout_height="121dp"
                android:src="@drawable/f02" />

            <TextView
                android:id="@+id/product_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="essence clear nose "
                android:textAlignment="center"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/product_price2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="59฿"
                android:textAlignment="center"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_add_to_cart2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:text="Add to Cart"
                android:backgroundTint="@drawable/button_color2"
                android:textSize="12sp" />
        </LinearLayout>

        <!--สินค้าชิ้นที่ 3-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:orientation="vertical"
            android:backgroundTint="#FDF5E6"
            android:background="@drawable/frame">

            <ImageView
                android:id="@+id/f03"
                android:layout_width="110dp"
                android:layout_height="118dp"
                android:src="@drawable/f03" />

            <TextView
                android:id="@+id/product_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Guccl perfume"
                android:textAlignment="center"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/product_price3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="6000฿"
                android:textAlignment="center"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_add_to_cart3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                android:backgroundTint="@drawable/button_color2"
                android:text="Add to Cart" />
        </LinearLayout>

    </LinearLayout>

    <!--Flashsale-->
    <TextView
        android:id="@+id/flashsale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FLASH SALE"
        android:layout_gravity="center"
        android:padding="8dp"
        android:textStyle="bold"/>

    <!--frame2-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp">

            <!--สินค้าชิ้นที่ 4-->
            <ImageView
                android:id="@+id/f04"
                android:layout_width="110dp"
                android:layout_height="114dp"
                android:src="@drawable/f04"
                android:backgroundTint="#FDF5E6"
                android:background="@drawable/frame"/>

            <TextView
                android:id="@+id/product_name4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sunscreen mizumi"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/product_price_discounted4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="390฿"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:textColor="#E60D0D"
                android:textAlignment="center"/>

            <Button
                android:id="@+id/btn_add_to_cart4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                android:backgroundTint="@drawable/button_color2"
                android:text="Add to Cart"/>

        </LinearLayout>

        <!--สินค้าชิ้นที่ 5-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/f05"
                android:layout_width="110dp"
                android:layout_height="114dp"
                android:src="@drawable/f05"
                android:backgroundTint="#FDF5E6"
                android:background="@drawable/frame"/>

            <TextView
                android:id="@+id/product_name5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dior perfume"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/product_price_discounted5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4500฿"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:textColor="#E60D0D"
                android:textAlignment="center"/>

            <Button
                android:id="@+id/btn_add_to_cart5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                android:backgroundTint="@drawable/button_color2"
                android:text="Add to Cart"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>