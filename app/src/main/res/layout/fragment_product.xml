<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Product_List.ProductFragment">


    <!-- Product Categories -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="start">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="หมวดหมู่สินค้า"
            android:textSize="25dp"
            android:textStyle="bold" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sunscreen"
            android:textSize="18dp"
            android:padding="8dp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"
            android:gravity="start"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Essence"
            android:textSize="18dp"
            android:padding="8dp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"
            android:gravity="start"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Perfume"
            android:textSize="18dp"
            android:padding="8dp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"
            android:gravity="start"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lipstick"
            android:textSize="18dp"
            android:padding="8dp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"
            android:gravity="start"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="powder"
            android:textSize="18dp"
            android:padding="8dp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"
            android:gravity="start"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Foundation"
            android:textSize="18dp"
            android:padding="8dp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"
            android:gravity="start"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="palette"
            android:textSize="18dp"
            android:padding="8dp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"
            android:gravity="start"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="สินค้าแนะนำ"
            android:textSize="25dp"
            android:textStyle="bold"  />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp">

                <!--สินค้าชิ้นที่ 1-->
                <ImageView
                    android:id="@+id/f01"
                    android:layout_width="110dp"
                    android:layout_height="114dp"
                    android:src="@drawable/f01"
                    android:backgroundTint="#FDF5E6"
                    android:background="@drawable/frame"/>

                <TextView
                    android:id="@+id/product_name4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Abidas"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/product_price_discounted4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$20"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:textColor="#E60D0D"
                    android:textAlignment="center"/>

                <Button
                    android:id="@+id/btn_add_to_cart4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="12sp"
                    android:backgroundTint="@drawable/button_color2"
                    android:text="Add to Cart"/>

            </LinearLayout>

            <!--สินค้าชิ้นที่ 5-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/f05"
                    android:layout_width="110dp"
                    android:layout_height="114dp"
                    android:src="@drawable/f05"
                    android:backgroundTint="#FDF5E6"
                    android:background="@drawable/frame"/>

                <TextView
                    android:id="@+id/product_name5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Niaf"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/product_price_discounted5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$30"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:textColor="#E60D0D"
                    android:textAlignment="center"/>

                <Button
                    android:id="@+id/btn_add_to_cart5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Add to Cart"
                    android:backgroundTint="@drawable/button_color2"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</FrameLayout>